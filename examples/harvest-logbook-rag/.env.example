# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=harvest_logbook
PINECONE_INDEX_HOST=your-index-abc123.svc.us-east-1.pinecone.io

# HuggingFace Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Google Sheets Configuration
GOOGLE_SHEETS_ID=your_spreadsheet_id_here
GOOGLE_SHEET_NAME=Log
GOOGLE_SHEETS_ACCESS_TOKEN=your_oauth_access_token_here

# LLM Configuration - Choose your preferred chat model
# Set to 'true' to use OpenAI for chat (recommended if you have OpenAI API key)
# Set to 'false' to use HuggingFace (requires HF API key with inference permissions)
USE_OPENAI_CHAT=true

# Optional: Specify OpenAI chat model (default: gpt-3.5-turbo)
# OPENAI_CHAT_MODEL=gpt-3.5-turbo
# OPENAI_CHAT_MODEL=gpt-4

# Logging Configuration
# Set to 'true' to use local CSV logging (recommended for testing)
# Set to 'false' to use Google Sheets (requires GOOGLE_SHEETS_ID and access token)
USE_CSV_LOGGER=true

# Optional: Custom log directory and file name
# LOG_DIRECTORY=./logs
# LOG_FILE_NAME=harvest_logbook.csv
